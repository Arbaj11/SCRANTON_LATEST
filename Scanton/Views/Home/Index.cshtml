        function updateActiveBubble() {
            let index = Math.round(customSlider.scrollLeft / (customSlider.scrollWidth / slides.length));
            bubbles.forEach(b => b.classList.remove('active'));
            if (bubbles[index]) {
                bubbles[index].classList.add('active');
