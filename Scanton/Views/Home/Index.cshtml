    <section class="py-3 overflow-hidden">
        <div class="container-lg">
            <div class="row">
                <div class="col-md-12">

                    <!-- Section Header -->
                    <div class="section-header d-flex flex justify-content-between">
                        <h2 class="section-title" style="margin-left: 20px; margin-right: 10px;">Best Selling Products</h2>

                        <div class=" d-flex align-items-center">
                            <a href="#" class="btn btn-primary me-2">View All</a>
                            <div class="swiper-buttons">
                                <button class="swiper-prev product-carousel-prev btn btn-yellow">❮</button>
                                <button class="swiper-next product-carousel-next btn btn-yellow">❯</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Swiper Container -->
            <div class="swiper-container">
                <div class="swiper-wrapper">
                    @if (Model?.Products != null && Model.Products.Any())
                    {
                        foreach (var product in Model.Products.Take(10))
                        {
                            <div class="swiper-slide">  
                                <div class="product-item">
                                    @if (product.BadgeIsActive == true)
                                    {
                                        <figure>
                                            <a href="@Url.Action("ProductDetails", "SingleProduct", new { product_id = product.Id })" title="@product.Name">
                                                @if (!string.IsNullOrEmpty(product.TittleBadge) && product.TittleBadge == "Sold Out")
                                                {
                                                    <span class="offer-badge">@product.TittleBadge</span>
                                                }
                                                else
                                                {
                                                    <span class="offer-badge-green">@product.TittleBadge %</span>
                                                }
                                                <img src="@product.ImagePath" alt="img-not-found" class="tab-image main-image">
                                                @if (!string.IsNullOrEmpty(product.SubImage_1))
                                                {
                                                    <img src="@product.SubImage_1" alt="Hover image not available" class="tab-image hover-image">
                                                }
                                            </a>
                                        </figure>
                                    }
                                    else
                                    {
                                        <figure>
                                            <a href="@Url.Action("ProductDetails", "SingleProduct", new { product_id = product.Id })" title="@product.Name">
                                                <img src="@product.ImagePath" alt="img-not-found" class="tab-image main-image">
                                                @if (!string.IsNullOrEmpty(product.SubImage_1))
                                                {
                                                    <img src="@product.SubImage_1" alt="Hover image not available" class="tab-image hover-image">
                                                }
                                            </a>
                                        </figure>
                                    }

                                    <div class="d-flex flex-column text-center">
                                        <h3 class="fs-6 fw-bold">@product.Name</h3>
                                        <h2 class="fs-6 fw-normal">@product.Flavor</h2>
                                        <div>
                                            <span class="rating">
                                                <i class="fa-solid fa-star"></i>
                                                <i class="fa-solid fa-star"></i>
                                                <i class="fa-solid fa-star"></i>
                                                <i class="fa-solid fa-star"></i>
                                                <i class="fa-solid fa-star-half-stroke"></i>
                                            </span>
                                            <span>(222)</span>
                                        </div>
                                        <div class="d-flex justify-content-center align-items-center gap-2">
                                            @if (product.BadgeIsActive == true)
                                            {
                                                @if (product.Price > 0)
                                                {
                                                    <del class="orignal-price">$@product.Price</del>
                                                }
                                                <span class="text-dark fw-semibold custom-bold">$@product.PriceWithDiscount</span>
                                            }
                                            else
                                            {
                                                <span class="text-dark fw-semibold custom-bold">$@product.PriceWithDiscount</span>
                                            }       
                                        </div>
                                        <div class="button-area p-3 pt-0">
                                            <div class="row g-1 mt-2 justify-content-start">
                                                <div class="col-6 d-flex justify-content-between align-items-center">
                                                    <a href="#" class="btn btn-primary rounded-1 p-2 fs-7 btn-cart" data-product-id="@product.Id">
                                                        <i class="fa-solid fa-cart-shopping"></i> Add to Cart
                                                    </a>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

            </div>
        </div>
    </section>






